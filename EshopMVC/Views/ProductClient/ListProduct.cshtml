@model List<Database.Entity.PRODUCT>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Name = (Database.Entity.CategoryMenu)ViewBag.CategoryName;
    var Option = (List<Database.Entity.CategoryMenu>)ViewBag.Option;
    var NewProduct = (List<Database.Entity.PRODUCT>)ViewBag.NewProduct;
    var slide = (Database.Entity.CategoryMenu)ViewBag.ProductSlide;
}

@section css{
    <!-- Price range icon -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/vendors/price-range.css">
}

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>collection</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Name.Name</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb end -->
<!-- section start -->
<section class="section-b-space ratio_asos">
    <div class="collection-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 collection-filter">
                    <!-- side-bar colleps block stat -->
                    <div class="collection-filter-block">
                        <!-- brand filter start -->
                        <div class="collection-mobile-back">
                            <span class="filter-back">
                                <i class="fa fa-angle-left"
                                   aria-hidden="true"></i> back
                            </span>
                        </div>
                        <div class="collection-collapse-block open">
                            <h3 class="collapse-block-title">brand</h3>
                            <div class="collection-collapse-block-content">
                                <div class="collection-brand-filter" id="filter-product">
                                    @foreach (var item in Option)
                                    {
                                        <div class="form-check collection-filter-checkbox">
                                            <input type="checkbox" class="form-check-input" id="@item.Id" value="@item.Id">
                                            <label class="form-check-label" for="@item.Name">@item.Name</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- silde-bar colleps block end here -->
                    <!-- side-bar single product slider start -->
                    <div class="theme-card">
                        <h5 class="title-border">Sản phẩm mới</h5>
                        @foreach (var item in NewProduct)
                        {
                            <div class="offer-slider slide-1">
                                <div>
                                    <div class="media">
                                        <a href="">
                                            <img class="img-fluid blur-up lazyload"
                                                 src="~/Content/Image/@item.PRODUCTIMAGE" alt="">
                                        </a>
                                        <div class="media-body align-self-center">
                                            <div class="rating">
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                            </div><a href="product-page(no-sidebar).html">
                                                <h6>@item.PRODUCTNAME</h6>
                                            </a>
                                            <h4>@(item.PRODUCTPRICE.ToString("N0")) $</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- side-bar single product slider end -->
                </div>
                <div class="collection-content col">
                    <div class="page-main-content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="top-banner-wrapper">
                                    <a href="#">
                                        <img src="~/Content/assets/Homepage/@slide.Slide"
                                             class="img-fluid blur-up lazyload" alt="">
                                    </a>
                                </div>
                                <div class="collection-product-wrapper">
                                    <div class="product-top-filter">
                                        <div class="row">
                                            <div class="col-xl-12">
                                                <div class="filter-main-btn">
                                                    <span class="filter-btn btn btn-theme">
                                                        <i class="fa fa-filter"
                                                           aria-hidden="true"></i> Filter
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="product-filter-content">
                                                    <div class="search-count">
                                                        <h5>Showing Products 1-24 of 10 Result</h5>
                                                    </div>
                                                    <div class="collection-view">
                                                        <ul>
                                                            <li><i class="fa fa-th grid-layout-view"></i></li>
                                                            <li><i class="fa fa-list-ul list-layout-view"></i></li>
                                                        </ul>
                                                    </div>
                                                    <div class="collection-grid-view">
                                                        <ul>
                                                            <li>
                                                                <img src="~/Content/assets/images/icon/2.png" alt=""
                                                                     class="product-2-layout-view">
                                                            </li>
                                                            <li>
                                                                <img src="~/Content/assets/images/icon/3.png" alt=""
                                                                     class="product-3-layout-view">
                                                            </li>
                                                            <li>
                                                                <img src="~/Content/assets/images/icon/4.png" alt=""
                                                                     class="product-4-layout-view">
                                                            </li>
                                                            <li>
                                                                <img src="~/Content/assets/images/icon/6.png" alt=""
                                                                     class="product-6-layout-view">
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div class="product-page-per-view">
                                                        <select>
                                                            <option value="High to low">
                                                                24 Products Par Page
                                                            </option>
                                                            <option value="Low to High">
                                                                50 Products Par Page
                                                            </option>
                                                            <option value="Low to High">
                                                                100 Products Par Page
                                                            </option>
                                                        </select>
                                                    </div>
                                                    <div class="product-page-filter">
                                                        <select>
                                                            <option value="High to low">Sorting items</option>
                                                            <option value="Low to High">50 Products</option>
                                                            <option value="Low to High">100 Products</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="product-wrapper-grid product-load-more" id="itemHolder">
                                        <div class="row margin-res" id="item">
                                            @foreach (var item in Model)
                                            {
                                                var url = "/chi-tiet/" + item.PRODUCTMETATITLE + "-" + item.PRODUCTID;
                                                <div class="col-xl-3 col-6 col-grid-box">
                                                    <div class="product-box">
                                                        <div class="img-wrapper">
                                                            <div class="front">
                                                                <a href="@url">
                                                                    <img src="~/Content/Image/@item.PRODUCTIMAGE"
                                                                         class="img-fluid blur-up lazyload bg-img"
                                                                         alt="">
                                                                </a>
                                                            </div>
                                                            <div class="back">
                                                                <a href="@url">
                                                                    <img src="~/Content/Image/@item.PRODUCTIMAGE"
                                                                         class="img-fluid blur-up lazyload bg-img"
                                                                         alt="">
                                                                </a>
                                                            </div>
                                                            <div class="cart-info cart-wrap">
                                                                <<a href="@Url.Action("AddItem","Cart", new { Id = item.PRODUCTID, Quantity = 1 })" title="Add to cart">>
                                                                    <i class="ti-shopping-cart"></i>
                                                                </a>
                                                                <a href="javascript:void(0)" title="Add to Wishlist">
                                                                    <i class="ti-heart" aria-hidden="true"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <div class="product-detail">
                                                            <div>
                                                                <a href="product-page(no-sidebar).html">
                                                                    <h6>@item.PRODUCTNAME</h6>
                                                                </a>
                                                                <h4>@(item.PRODUCTPRICE.ToString("N0")) $</h4>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="load-more-sec">
                                        <a href="javascript:void(0)" class="loadMore">
                                            load
                                            more
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- section End -->

@section js{
    <!-- price range js -->
    <script src="~/Content/assets/js/price-range.js"></script>
    <script src="~/Content/assets/js/controller/menu-filter.js"></script>
}

